pipeline {
    agent any
    
    environment {
        FRONTEND_DIR = 'frontend_SEM_track'
        BACKEND_DIR = 'sem-tracker'
        FRONTEND_IMAGE = 'frontend_new'
        BACKEND_IMAGE = 'backend_new'
        MYSQL_ROOT_PASSWORD = 'Kopu2001'
        MYSQL_DATABASE = 'sem_db'
    }
    
    stages {
        stage('Checkout & System Check') {
            steps {
                checkout scm
                sh 'echo "=== System Tools Check ==="'
                sh 'java -version'
                sh 'mvn -version'
                sh 'node --version'
                sh 'npm --version'
                sh 'docker --version'
                sh 'echo "=== Directory Structure ==="'
                sh 'ls -la'
            }
        }
        
        stage('Build Frontend') {
            steps {
                dir(env.FRONTEND_DIR) {
                    sh 'npm install'
                    sh 'npm run build'
                    sh 'npm test -- --watchAll=false || echo "Tests skipped"'
                }
            }
        }
        
        stage('Build Backend') {
            steps {
                dir(env.BACKEND_DIR) {
                    sh 'mvn clean package -DskipTests'
                    sh 'mvn test'
                    sh 'ls -la target/*.jar'
                }
            }
        }
        
        stage('Build Docker Images') {
            steps {
                script {
                    dir(env.FRONTEND_DIR) {
                        sh "docker build -t ${env.FRONTEND_IMAGE}:${env.BUILD_NUMBER} ."
                    }
                    dir(env.BACKEND_DIR) {
                        sh "docker build -t ${env.BACKEND_IMAGE}:${env.BUILD_NUMBER} ."
                    }
                }
            }
        }
        
        stage('Simple Test') {
            steps {
                echo "Build completed successfully!"
                sh 'docker images | grep -E "(frontend_new|backend_new)"'
            }
        }
    }
    
    post {
        always {
            echo 'Pipeline completed!'
        }
        success {
            echo 'âœ… SUCCESS! Application built successfully.'
        }
    }
}