pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build and Deploy') {
            steps {
                dir('SEM_full2') {
                    sh '''
                        # Build frontend
                        cd frontend_SEM_track && npm install && npm run build
                        
                        # Build backend
                        cd ../sem-tracker && mvn clean package -DskipTests
                        
                        # Build Docker images
                        cd ../frontend_SEM_track && docker build -t frontend_new .
                        cd ../sem-tracker && docker build -t backend_new .
                        
                        # Deploy
                        docker-compose down -v || true
                        docker-compose up -d
                        
                        echo "ðŸš€ Deployment completed!"
                    '''
                }
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Application deployed successfully!'
        }
    }
}