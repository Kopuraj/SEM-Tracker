pipeline {
    agent any

    environment {
        // Tag Docker images for this build (optional)
        BUILD_TAG = "${env.BUILD_NUMBER}"
        FRONTEND_IMAGE = "frontend_new:${BUILD_TAG}"
        BACKEND_IMAGE = "backend_new:${BUILD_TAG}"
    }

    stages {
        stage('Build Frontend') {
            steps {
                dir('SEM_full2/frontend_SEM_track') {
                    sh 'npm install'
                    sh 'npm run build'
                }
            }
        }

        stage('Build Backend') {
            steps {
                dir('SEM_full2/sem-tracker') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }

        stage('Build Docker Images') {
            steps {
                script {
                    dir('SEM_full2/frontend_SEM_track') {
                        sh "docker build -t ${FRONTEND_IMAGE} ."
                    }
                    dir('SEM_full2/sem-tracker') {
                        sh "docker build -t ${BACKEND_IMAGE} ."
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                dir('SEM_full2') {
                    sh 'docker compose down -v || true'
                    sh 'docker compose up -d'
                }
            }
        }
    }

    post {
        always {
            echo '--- Pipeline finished ---'
        }
        success {
            echo '✅ SEM Tracker deployed successfully!'
        }
        failure {
            echo '❌ Pipeline failed. Check logs.'
        }
    }
}
