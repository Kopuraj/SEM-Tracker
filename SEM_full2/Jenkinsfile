pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('Build Frontend') {
            steps {
                dir('frontend_SEM_track') {
                    sh 'npm install && npm run build'
                }
            }
        }
        
        stage('Build Backend') {
            steps {
                dir('sem-tracker') {
                    sh 'mvn clean package -DskipTests'
                }
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'docker-compose down -v || true'
                sh 'docker-compose up -d --build'
            }
        }
    }
    
    post {
        success {
            echo 'âœ… Application deployed successfully!'
        }
    }
}